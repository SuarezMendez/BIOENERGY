<body class="fondo">
  <div class="row mt">
    <div class="col-lg-offset-1 col-lg-10 colEvaluacion">
      
      <h1 class="titulo">Paso 2</h1>
      <h3>Creación de objetivos</h3>
      <p align="justify">
        Chachara
      </p>
    
      <div>
        <% if @goals == [] %>
            <p class="alert alert-warning">Aún no tienes objetivos.</p>
        <% else %>
          <% @goals.each do |g| %>
            <div>
              <%= g.description %>
              <%= link_to 'Editar', edit_goal_path(g, :g_type => g.perspective_id), class:"btn btn-ghost" %>
              <%= link_to 'Eliminar', g, method: :delete, data: { confirm: '¿Estás seguro?'}, class:"btn btn-ghost" %>
            </div>
          <% end %>
          <%= @goals.get_total_weight %>
        <% end %>
        <div style="row">
          <div class="col-sm-2">
            <%= link_to "Crear", new_goal_path(:g_type => @g_type), class:"btn btn-default" %>
          </div>
          <div class="col-sm-offset-8 col-sm-2">
            <%= link_to "Aceptar", evaluated_step_two_accept_path(:g_type => @g_type), class:"btn btn-default" %> 
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
